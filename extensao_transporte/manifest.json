{
  "manifest_version": 3,
  "name": "Preencher Transporte",
  "version": "1.0",
  "description": "Extens√£o para preencher automaticamente campos de transporte.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
